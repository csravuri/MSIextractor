<Window x:Class="MSIextractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSIextractor"
        mc:Ignorable="d"
        Title="MSI Ex" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" >
            <StackPanel>
                <Label Content="Slect MSI file"/>
                <TextBox Name="txtMSIPath" IsEnabled="False"/>
            </StackPanel>
            <Button Content="Browse" Click="msiSelect_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" >
            <StackPanel>
                <Label Content="Slect folder to save content" />
                <TextBox Name="txtSaveFolder" IsEnabled="False"/>
            </StackPanel>
            <Button Content="Browse" Click="saveFolderSelect_Click"/>
        </StackPanel>
        <Button Content="Convert" Click="convert_Click"/>
    </StackPanel>
</Window>
